@model IEnumerable<IdeasRepository.Web.Models.Roles.RoleViewModel>

@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var role in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
            <td>
                @if (role.Name != "Administrator" && role.Name != "User")
                {
                    @Html.ActionLink("Edit", "Edit", new { id = role.Id });
                    @: |
                    @Html.ActionLink("Delete", "Delete", new { id = role.Id });
                }
            </td>
        </tr>
    }

</table>
